<%= render @tweet, user_tweets: @user_tweets, user_likes: @user_likes, new_like: @new_like%>

<div>
  <% if current_user %>
      <%= render "create", new_tweet: @new_tweet, parent_tweet: @tweet %>
  <% end %> 
 </div>

<div>
  <% @in_tweet.replies.each do |replies| %>
    <%= render replies, user_tweets: @user_tweets, user_likes: @user_likes %>
  <% end %>
</div>

<div>
  <%= link_to "Edit this tweet", edit_tweet_path(@tweet) %> |
  <%# <%= link_to "Back to tweets", tweets_path %>

  <%= button_to "Destroy this tweet", @tweet, method: :delete %>
</div>
