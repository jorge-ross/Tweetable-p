<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
  <h5 style="margin-top: 8px; margin-bottom: 8px;" >AVATAR</h5>
    <% if user.avatar.attached? %>
      <%= image_tag user.avatar, style: 'width: 48px; height: 48px; border-radius: 50px; margin-bottom: 12px;'%>
    <% else %> 
      <%= image_tag "user/default_user.png", style: 'width: 48px; height: 48px; border-radius: 50px; margin-bottom: 12px;'%> 
    <% end %>
    <div>
      <%= form.label :image %>
      <%= form.file_field :image, value: "Select file" %>
    </div>
  </div>

  <div>
    <%= form.label :password, style: "display: block"  %>
    <%= form.password_field :password, placeholder: "*****" %>
  </div>

  <div>
    <%= form.label :password_confirmation, style: "display: block"  %>
    <%= form.password_field :password, placeholder: "*****" %>
  </div>

  <div>
    <%= form.label :current_password, style: "display: block"  %>
    <%= form.password_field :password, placeholder: "*****" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
